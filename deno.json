{
	"name": "@chzkyli/template",
	"version": "0.1.0",
	"license": "MIT",

	"exports": { ".": "./main.ts", "./create": "./main.ts" },

	"tasks": {
		"run": "deno -A ./main.ts",
		"test": "deno test -A ./test/ ",
		"mod": "deno run -A jsr:@chzkyli/cli@0.2.1 mod ./lib",
		"build": "deno compile -A ./main.ts  -o ./dist/template"
	},

	"imports": {
		"@/": "./src/",
		"#self": "./lib/mod.ts",
		"#internal": "./lib/internal.ts",

		"@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0",
		"@std/cli": "jsr:@std/cli@^1.0.28",
		"@std/fmt": "jsr:@std/fmt@^1.0.9",
		"@std/path": "jsr:@std/path@^1.1.4",
		"@std/assert": "jsr:@std/assert@^1.0.0",
		"@std/semver": "jsr:@std/semver@^1.0.3"
	},

	"exclude": ["dist/", "node_modules/", "templates/"],
	"nodeModulesDir": "auto",
	"lint": { "rules": { "tags": [], "include": ["explicit-function-return-type"] } },
	"allowScripts": ["npm:cbor-extract@2.2.0"]
}
